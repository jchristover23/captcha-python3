#CAPTCHA PROGRAM

from string import * #import modul string (ascii_letters & digits) // print (ascii_letters)
import random #import modul random untuk memilih acak // print (digits)
print("Tuliskan ulang CAPTCHA dibawah ini!")

def builder(hasilcaptcha):
    def gc1(hasilcaptcha): #generate tiap kata (angka)
        return(random.choice(digits))

    def gc2(hasilcaptcha):
        return(random.choice(digits))

    def gc3(hasilcaptcha): 
        return(random.choice(ascii_letters))

    def gc4(hasilcaptcha):
        return(random.choice(digits))

    def gc5(hasilcaptcha): #generate huruf
        return(random.choice(ascii_letters))

    def final_captcha(hasilcaptcha):
        return gc1(hasilcaptcha) + gc2(hasilcaptcha) + gc3(hasilcaptcha) + gc4(hasilcaptcha) + gc5(hasilcaptcha)
    return final_captcha(0)

def proses():
    a = (builder(0))
    print (a)
    respons = input("Masukkan respons: ")
    if str(a) == str(respons):
        print("CAPTCHA SESUAI :)")
    else:
        print("CAPTCHA TIDAK SESUAI :( COBA LAGI!")
        builder(0)
        proses()
    
proses()

